<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/jh_shape_corner_rectangle_gray2"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_station_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="5"
            android:text="基础数据"
            android:textColor="@color/black_trans70"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/id_station_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_more_pressed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_station_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/jx_shape"
            android:gravity="left"
            android:text="基础数据"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="城市名称"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_city_name"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="CityName"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="供暖期平均温度"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_avg_tem"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Tpj1  -9.4（℃）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="设计热指标"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_hot_num"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="k   45（W/平米）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="供热常数"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_hot_const"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="L        0.864"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="供暖天数"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_days"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="N      181（d）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="室内计算温度"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_in_tem"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Tn        18（℃）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="供暖室外计算温度"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_out_tem"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Tw1      -24.2（℃）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="供热面积"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_area"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="F    7.15（万平米）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="全年日平均耗热量"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_avg_hot"
                    style="@style/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jx_shape2"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Q1        XXX（GJ）"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>